
@model  HMS.Areas.Dashboard.ViewModels.AccomodationTypeActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">

               
                    <span>Delete Accomodation Type</span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @* This is the Id and form *@
            <form id="actionForm">
                @* This is the Id that will be passed if it's for delete controller *@
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>
            <div class="alert alert-danger" role="alert">
               Are You Sure!
            </div>
        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close mr-1"></i>Close</button>
        </div>
    </div>

}
@* This is a script that when the action botton is clicked, the information is sent to the Accomodationtype controller in the Action method *@
@* Thus is done by post method and if it's successful, it should reload to print the fresh save information *@
<script>
    $("#actionButton").click(function() {

        $.ajax({
                url: '@Url.Action("Delete", "AccomodationTypes")',
                type: "post",
                data: $("#actionForm").serialize()
            })
            .done(function (response) {
                if(response.Success)
                {
                    // Data is save reload page
                    location.reload();
                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            });

    });



</script>