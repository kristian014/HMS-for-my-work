
@model  HMS.Areas.Dashboard.ViewModels.AccomodationTypeActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" >
                
              @if (Model.ID > 0)
              {
                  <span>Edit Accomodation Type</span>
              }
              else
              {
                  <span>Create Accomodation Type</span>
              }
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @* This is the Id and form *@
            <form id="actionForm">
                @* This is the Id that will be passed if it's for edit *@
                <input type="hidden" name="ID" value="@Model.ID"/>
                <div class="form-group">
                    <label >Name</label>
                    @* This is the name that will be sent *@
                    <input class="form-control" name="Name" placeholder="Enter Accomodation TypeName" value="@Model.Name">

                </div>

                <div class="form-group">
                    <label >Description</label>
                    @* This is the description that will be sent *@
                    <textarea class="form-control" name="Description" placeholder="Enter Accomodation Type Description">@Model.Description</textarea>
                </div>
            </form>

            <div class="errorDiv">

            </div>
        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close mr-1"></i> Close</button>
        </div>
    </div>

}
@* This is a script that when the action botton is clicked, the information is sent to the Accomodationtype controller in the Action method *@
@* Thus is done by post method and if it's successful, it should reload to print the fresh save information *@
<script>
    $("#actionButton").click(function() {

        $.ajax({
                url: '@Url.Action("Action", "AccomodationTypes")',
                type: "post",
                data: $("#actionForm").serialize()
            })
            .done(function (response) {
                if(response.Success)
                {
                    // Data is save reload page
                    location.reload();
                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            });

    });



</script>